- name: install packages for workstations (basic/all)
  package:
    state: latest
    name:
      - clamtk
      - flatpak
      - gimp
      - gimp-help-de
      - gparted
      - grsync
      - hunspell-de-de-frami
      - hyphen-de
      - keepassxc
