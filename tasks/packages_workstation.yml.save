#      - libreoffice-pdfimport
      - luckybackup
      - nextcloud-desktop
      - remmina
      - skanlite
      - syncthing
      - terminator
      - vlc

- name: install packages for workstations (Ubuntu)
  apt:
    state: latest
    name:
      - alacarte
      - dconf-cli
      - deluge
      - gnome-software-plugin-flatpak
      - guake
      - gufw
      - inkscape
      - language-pack-gnome-de-base
      - language-pack-gnome-de
      - nemo
      - nemo-nextcloud
      - python3-psutil
      - rhythmbox
      - searchmonkey
      - ufw
  when: 
    - ansible_distribution == "Ubuntu"
#    - ansible_facts['distribution'] == "Ubuntu"


- name: install packages for workstations (Suse, Archlinux)
  apt:
    state: latest
    name:
      - yakuake
  when: ansible_distribution == "Suse" or
        ansible_distribution == "Archlinux"


